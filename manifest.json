{
    "manifest_version": 3,
    "name": "Mini Journal",
    "version": "1.0.0",
    "description": "A lightweight, private browser extension for quick daily reflections and thoughts",
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }